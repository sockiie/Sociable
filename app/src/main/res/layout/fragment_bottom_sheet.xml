<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#859F95"
    tools:context=".BottomSheetFragment">


    <Button
        android:id="@+id/coreconcept"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:background="#859F95"
        android:drawableStart="@drawable/coreconcepticon"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:text="Core concept of sociable"
        android:textColor="#FFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/timer"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="#859F95"
        android:drawableStart="@drawable/settimericon"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:text="Set Timer"
        android:textColor="#FFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coreconcept" />
</androidx.constraintlayout.widget.ConstraintLayout>